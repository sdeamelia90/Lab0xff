#define INFINITE 10000000


//Random Cost Matrix Array
#define MAXN 10000
int VERTICES[MAXN] = { 0 };
double* ptr,
    ** RANDOMM;

double sum = 0;

int ROUNDS = 0;
//Coordinate Arrays
double X[MAXN] = { 0 };
double Y[MAXN] = { 0 };

//
int PERMUTATE[MAXN][MAXN] = { 0 };
int CITIES[MAXN];
int PATH[MAXN];



double expectedDistance(int N) {
    double expectedDistance =  pow(pow(X[0] - X[1], 2) + pow((Y[0] - Y[1]), 2), 0.5) * N;
    return expectedDistance;
}

void fillVertices(int N) {
    for (int i = 0; i < N; i++)
        VERTICES[i] = i;
}

void swap(char* x, char* y)
{
    char temp;
    temp = *x;
    *x = *y;
    *y = temp;
}


//from link in notes
void permute(int *VERTICES, int l, int r)
{
    double sum = 0;
    int tempCity = 0;
    int i;
    double smallestSum = INFINITE;
    if (l == r) {
        for (int j = 0; j < r - 1; j++) {
            PATH[j] = VERTICES[j];
            sum = sum + RANDOMM[j][VERTICES[j + 1]];
            printf("new sum for %d: %lf\n", ROUNDS, sum);
            tempCity = VERTICES[r - 1];
        }
        sum = sum + RANDOMM[tempCity][0];
        if (sum < smallestSum) {
            smallestSum = sum;
        }
        sum = 0;
        ROUNDS++;
    }
    else
    {
        for (i = l; i <= r; i++)
        {
            swap((VERTICES + l), (VERTICES + i));
            permute(VERTICES, l + 1, r);
            swap((VERTICES + l), (VERTICES + i));
        }
    }
} 

//First Test Matrix
void GenerateRandomCostMatrix(int vNum, int eCostMax){
    for (int i = 0; i < vNum; i++) {
        for (int j = 0; j < vNum; j++) {
            if (i == j) {
                RANDOMM[i][j] = 0;
            }
            else if (i < j) {
                RANDOMM[i][j] = (rand() % eCostMax);
            }
            else {
                RANDOMM[i][j] = RANDOMM[j][i];
            }
        }
    }
}

//Second Test Matrix
void GenerateRandomEuclideanCostMatrix(int vNum, int maxCoordinate) {
    double edgeWeight = 0;
    for (int i = 0; i < vNum; i++) {
        X[i] = rand() % maxCoordinate;
        Y[i] = rand() % maxCoordinate;
    }

    for (int i = 0; i < vNum; i++) {
        for (int j = 0; j < vNum; j++) {
            edgeWeight = pow(pow(X[i] - X[j], 2) + pow((Y[i] - Y[j]),2), 0.5);
            RANDOMM[i][j] = edgeWeight;
        }
    }

}

//Shuffles the array vertices
void randomizeArr(int N) {
    int j = 0;
    int temp = 0;

    for (int i = 1; i < N; i++) {
        j = rand() % (N - 1) + 1;
        temp = VERTICES[i];
        VERTICES[i] = VERTICES[j];
        VERTICES[j] = temp;
    }
}

//Third Test Matrix
GenerateRandomCircularGraphCostMatrix(int N, int radius) {
    double edgeWeight = 0;
    double stepAngle = 0;
    fillVertices(N);
    randomizeArr(N);

    for (int i = 0; i < N; i++) {

        stepAngle = 2 * M_PI / N;
        X[VERTICES[i]] = radius * sin(i * stepAngle);
        Y[VERTICES[i]] = radius * cos(i * stepAngle);
    }

    for (int i = 0; i < N; i++) {
        for (int j = 0; j < N; j++) {
            edgeWeight = pow(pow(X[i] - X[j], 2) + pow((Y[i] - Y[j]), 2), 0.5);
            RANDOMM[i][j] = edgeWeight;
        }
    }


}

double bruteForce(int N) {
    fillVertices(N);
    permute(VERTICES, 1, N - 1);
    double tempSum = 0;
    double smallestSum = INFINITE;
    int tempCity = 0;
    int tempRoute = 0;

    //for (int i = 0; i < ROUNDS; i++) {
